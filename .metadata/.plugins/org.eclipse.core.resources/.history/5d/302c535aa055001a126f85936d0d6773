#include <Arduino.h>
#include "photoresistor.h"
#include "mystdio.h"
#include "led.h"
#include "analoglibrary.h"

void setup() {
	SerialInit();
	PhotoresistorInit();
	LED_Init();
	printf("Initialization done");
}

void loop() {
	printf("Hello world!");
	int lightLevel = ReadLightLevel();
	float voltage = ADCtoVoltage(lightLevel);
	printf("Light level: %d", lightLevel);
	printf("Voltage: %.2f", voltage);

	delay(1000);
	LED_On();
	delay(1000);
	LED_Off();
	delay(1000);
}
