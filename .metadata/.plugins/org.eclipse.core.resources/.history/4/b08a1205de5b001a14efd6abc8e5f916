#include "analoglibrary.h"



//TODO:
float ADCtoVoltage(int value) {
	// Convert the raw data value (0 - 1023) to voltage (0.0V - 5.0V):
	float voltage = value * (5.0 / 1024.0);
	return voltage;
}

